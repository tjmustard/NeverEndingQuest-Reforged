{
  "spec": {
    "version": "1.0",
    "description": "Companion memory compression schema for NeverEndingQuest",
    "compression_ratio": "70-85%",
    "keys": {
      "root": {
        "n": "npc_name",
        "cm": "core_memories (array)",
        "es": "emotional_state [trust, power, intimacy, fear, respect]",
        "bm": "behavioral_model [pve, cvc, gvg, tvd, vvp]",
        "ti": "total_interactions"
      },
      "memory": {
        "i": "id",
        "t": "timestamp",
        "l": "location",
        "a": "actions (abbreviated)",
        "e": "emotional_vector [trust, power, intimacy, fear, respect]",
        "v": "velocity",
        "j": "journal_excerpt",
        "c": "context",
        "m": "mass",
        "d": "decay_resistance (omitted if 1.0)",
        "ct": "cascade_type (omitted if null)",
        "x": "interaction_number"
      }
    },
    "behavioral_model_order": [
      "protector_vs_exploiter",
      "consistent_vs_chaotic",
      "generous_vs_greedy",
      "truthful_vs_deceptive",
      "violent_vs_peaceful"
    ],
    "emotional_vector_order": [
      "trust",
      "power",
      "intimacy",
      "fear",
      "respect"
    ],
    "action_abbreviations": {
      "shared camaraderie": "sc",
      "resolve determination": "rg",
      "stories experiences": "se",
      "admitted vulnerability": "av",
      "provided comfort": "pc",
      "banter exchange": "be",
      "shared kiss": "sk",
      "coordinated attack": "ca",
      "offered reassurance": "or",
      "unified united": "uu",
      "deepened bond": "db",
      "showed generosity": "sg",
      "kept watch": "kw",
      "s hope": "sh",
      "s point": "sp",
      "showed compassion": "sco",
      "provided support": "ps",
      "shared moment": "sm",
      "expressed gratitude": "eg",
      "offered protection": "op",
      "tactical coordination": "tc",
      "emotional support": "es",
      "shared victory": "sv",
      "mutual respect": "mr",
      "confided fears": "cf",
      "showed trust": "st",
      "planning strategy": "pts",
      "healing touch": "ht",
      "defended ally": "da",
      "celebrated success": "cs"
    }
  }
}