{
  "spec": {
    "version": "2.0",
    "description": "Maximum compression schema for companion memories",
    "compression_ratio": "70-85%",
    "keys": {
      "root": {
        "n": "npc_name (first letter only)",
        "cm": "core_memories array",
        "es": "emotional_state [trust, power, intimacy, fear, respect]",
        "bm": "behavioral_model [p_vs_e, c_vs_c, g_vs_g, t_vs_d, v_vs_p]",
        "ti": "total_interactions",
        "_s": "schema version marker"
      },
      "memory": {
        "i": "id (last 3 chars)",
        "t": "timestamp (YearMonthDay-HH:MM)",
        "l": "location (ID only)",
        "a": "actions (2-char abbreviations)",
        "e": "emotional_vector array (rounded)",
        "v": "velocity (rounded)",
        "j": "journal (40 chars max)",
        "c": "context (P/N/M/U)",
        "m": "mass (omitted if 1.0)",
        "d": "decay_resistance (omitted if 1.0)",
        "ct": "cascade_type (C/R/N/E/S)",
        "x": "interaction_number"
      }
    },
    "timestamp_format": "1492S1-13:32 = 1492 Springmonth 1 13:32",
    "context_codes": {
      "P": "Positive interaction",
      "N": "Negative interaction",
      "M": "Mixed interactions",
      "U": "Unknown"
    },
    "cascade_codes": {
      "CONFIRMATION": "C",
      "REVERSAL": "R",
      "NEUTRAL": "N",
      "ESCALATION": "E",
      "RESOLUTION": "S"
    },
    "action_codes": {
      "shared camaraderie": "sc",
      "resolve determination": "rg",
      "stories experiences": "se",
      "admitted vulnerability": "av",
      "provided comfort": "pc",
      "banter exchange": "be",
      "shared kiss": "sk",
      "coordinated attack": "ca",
      "offered reassurance": "or",
      "unified united": "uu",
      "deepened bond": "db",
      "showed generosity": "sg",
      "kept watch": "kw",
      "s hope": "sh",
      "s point": "sp",
      "showed compassion": "sco",
      "provided support": "ps",
      "shared moment": "sm",
      "expressed gratitude": "eg",
      "offered protection": "op",
      "tactical coordination": "tc",
      "emotional support": "es",
      "shared victory": "sv",
      "mutual respect": "mr",
      "confided fears": "cf",
      "showed trust": "st",
      "planning strategy": "pts",
      "healing touch": "ht",
      "defended ally": "da",
      "celebrated success": "cs",
      "shared laughter": "sl",
      "offered advice": "oa",
      "stood together": "stg",
      "faced danger": "fd",
      "protected vulnerable": "pv",
      "risked safety": "rs",
      "demonstrated loyalty": "dl",
      "expressed concern": "ec",
      "provided guidance": "pg",
      "acknowledged sacrifice": "as"
    },
    "behavioral_model_order": [
      "protector_vs_exploiter",
      "consistent_vs_chaotic",
      "generous_vs_greedy",
      "truthful_vs_deceptive",
      "violent_vs_peaceful"
    ],
    "emotional_vector_order": [
      "trust",
      "power",
      "intimacy",
      "fear",
      "respect"
    ]
  }
}